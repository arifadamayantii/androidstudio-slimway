<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Gambar Resep -->
    <ImageView
        android:id="@+id/imageResep"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvKategoriKalori"
        android:layout_marginEnd="8dp" />

    <!-- Nama Resep -->
    <TextView
        android:id="@+id/tvNamaResep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Resep"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageResep"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintBottom_toTopOf="@+id/tvKategoriKalori" />

    <!-- Kategori dan Kalori -->
    <TextView
        android:id="@+id/tvKategoriKalori"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kategori | Kalori"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaResep"
        app:layout_constraintStart_toEndOf="@id/imageResep"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Edit -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Edit"
        android:textSize="12sp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:backgroundTint="#00AEEF"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnHapus"
        android:layout_marginEnd="8dp"/>

    <!-- Tombol Hapus -->
    <Button
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Hapus"
        android:textSize="12sp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:backgroundTint="#00AEEF"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
