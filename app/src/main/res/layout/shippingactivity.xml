<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ShippingDetailsActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Shipping Details Title aligned to the left of the Back button -->
    <TextView
        android:id="@+id/shippingDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Details"
        android:textColor="#007EA7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/buttonBack"
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        android:layout_marginStart="16dp" />


    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Detail Delivery Address"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shippingDetailsTitle"
        android:layout_marginTop="8dp" />

    <!-- Name Field -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Name"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Start Date Field -->
    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Start Date"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Phone Number Field -->
    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Phone Number"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Address Field -->
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter Your Detail Address"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- City Field -->
    <EditText
        android:id="@+id/etCity"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="City"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Province Field -->
    <EditText
        android:id="@+id/etProvince"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Province"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Postal Code Field -->
    <EditText
        android:id="@+id/etPostalCode"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Postal Code"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etProvince"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
    <!-- Delivery time -->
    <EditText
        android:id="@+id/etDeliveryTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Delivery Time"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etPostalCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0081C9"
        android:text="Next"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDeliveryTime" />
    <!-- Total Price Label -->
    <TextView
        android:id="@+id/totalPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Total Price Value -->
    <TextView
        android:id="@+id/totalPriceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textColor="#0081C9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
