<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="29dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/titiktiga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery To"
            android:textSize="14sp"
            android:textColor="#777777"
            app:layout_constraintTop_toTopOf="@id/menuIcon"
            app:layout_constraintStart_toEndOf="@id/menuIcon"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wyndham, Basuki Rahmat"
            android:textColor="#0081C9"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/storeLabel"
            app:layout_constraintTop_toBottomOf="@id/storeLabel" />

        <FrameLayout
            android:id="@+id/cartContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cartBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:text="2"
                android:textColor="#fff"
                android:textSize="10sp"
                android:gravity="center" />
        </FrameLayout>

        <!-- BOTTOM NAVBAR MASUK -->
        <ImageView
            android:id="@+id/bannerTop"
            android:layout_width="381dp"
            android:layout_height="159dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cateringatas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storeName" />

        <TextView
            android:id="@+id/todayPicksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:text="Today's Healthy Picks"
            android:textColor="#0081C9"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerTop" />


        <ImageView
            android:id="@+id/newImage"
            android:layout_width="398dp"
            android:layout_height="185dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tengahkatering"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todayPicksTitle" />

        <ImageView
            android:id="@+id/cateringImage"
            android:layout_width="372dp"
            android:layout_height="146dp"
            android:layout_marginTop="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cateringbawah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newImage" />

        <Button
            android:id="@+id/createcatering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0081C9"
            android:text="Register Now"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/cateringImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/custom_bottom_nav"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#F5F5F5"
            android:gravity="center"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/nav_home_recipe"
                    android:layout_width="80dp"
                    android:layout_height="78dp"
                    android:contentDescription="Recipe"
                    android:paddingTop="17dp"
                    android:src="@drawable/ic_recipe"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.263"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/nav_resep_progres"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:contentDescription="Progres"
                    android:paddingTop="17dp"
                    android:src="@drawable/ic_progres"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.984"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/nav_resep_calorie"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:contentDescription="Calorie"
                    android:paddingTop="17dp"
                    android:src="@drawable/ic_calorie"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.748"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/nav_resep_catering"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:contentDescription="Catering"
                    android:paddingTop="17dp"
                    android:src="@drawable/ic_cateringnya"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/nav_resep_home"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:contentDescription="Home"
                    android:paddingTop="17dp"
                    android:src="@drawable/ic_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.016"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Sidebar (Drawer) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sidebar_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <include layout="@layout/sidebar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
