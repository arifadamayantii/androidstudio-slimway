<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"> <!-- background abu-abu -->

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Add Photo -->

        <!-- Recipe Name -->
        <ImageView
            android:id="@+id/imgAddPhoto"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Add Photo Icon"
            android:src="@drawable/ic_add_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" />

        <!-- Description -->
        <EditText
            android:id="@+id/etRecipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="Enter Recipe Name Here"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAddPhoto" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add Description"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/etRecipeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Nutrition Facts Title -->

        <TextView
            android:id="@+id/tvNutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nutrition Facts"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDescription" />


        <!-- Category Title -->

        <!-- Category Checkboxes -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nutritionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNutrition">

            <EditText
                android:id="@+id/etProtein"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Protein (g)"
                android:inputType="number"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/etFat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.22" />

            <EditText
                android:id="@+id/etFat"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Fat (g)"
                android:inputType="number"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/etCarbs"
                app:layout_constraintStart_toEndOf="@id/etProtein"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.22" />

            <EditText
                android:id="@+id/etCarbs"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Carbs (g)"
                android:inputType="number"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/etCalories"
                app:layout_constraintStart_toEndOf="@id/etFat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.22" />

            <EditText
                android:id="@+id/etCalories"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Calories"
                android:inputType="number"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/etCarbs"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.22" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="404dp"
            android:text="Select Meal Category"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="12sp"
            android:padding="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategory"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <CheckBox
            android:id="@+id/cbLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="12sp"
            android:padding="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            app:layout_constraintTop_toTopOf="@id/cbBreakfast"
            app:layout_constraintStart_toEndOf="@id/cbBreakfast"
            android:layout_marginStart="8dp" />

        <CheckBox
            android:id="@+id/cbDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:textSize="12sp"
            android:padding="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            app:layout_constraintTop_toTopOf="@id/cbBreakfast"
            app:layout_constraintStart_toEndOf="@id/cbLunch"
            android:layout_marginStart="8dp" />

        <!-- Ingredients Title -->

        <!-- Ingredient EditText -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:text="Ingredients"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbBreakfast" />

        <EditText
            android:id="@+id/etIngredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add Ingredients"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvIngredients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ingredient Dynamic Content Placeholder -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ingredientLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/etIngredient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add Ingredient Text -->

        <!-- How to Make Title -->

        <!-- Instruction EditText -->

        <!-- Instruction Layout Placeholder -->

        <TextView
            android:id="@+id/tvInstructionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:text="How to Make"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredientLayout" />


        <EditText
            android:id="@+id/etInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="Add Instruction"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInstructionTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instructionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etInstruction" />

        <!-- Add Video -->

        <!-- Buttons -->

        <Button
            android:id="@+id/btnSave"
            android:layout_width="180dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#BDBDBD"
            android:text="Simpan"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/btnUpload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructionLayout" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="180dp"
            android:layout_height="59dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#00AEEF"
            android:text="Upload"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnSave"
            app:layout_constraintTop_toBottomOf="@id/instructionLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
