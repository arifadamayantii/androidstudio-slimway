<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">


    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="74dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleCreateMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Create Menu"
        android:textColor="#007EA7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWeeklyMenu"
        android:layout_width="379dp"
        android:layout_height="148dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleCreateMenu">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mitracreatemenu"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- DROPDOWN 1: Menu Category -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/dropdownMenuCategoryLayout"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Choose Your Menu Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWeeklyMenu"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <AutoCompleteTextView
            android:id="@+id/dropdownMenuCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:dropDownVerticalOffset="8dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- DROPDOWN 2: Package Option -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/dropdownPackageOptionLayout"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="Choose Your Package Option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dropdownMenuCategoryLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <AutoCompleteTextView
            android:id="@+id/dropdownPackageOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:dropDownVerticalOffset="8dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nama Menu -->
    <EditText
        android:id="@+id/editMenuName"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext"
        android:hint="Enter Menu Name Here"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/dropdownPackageOptionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Deskripsi -->
    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:hint="Add Description"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/editMenuName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kalori dan Harga -->
    <EditText
        android:id="@+id/editCalories"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_edittext"
        android:hint="Calories"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/editDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editPrice"
        app:layout_constraintWidth_percent="0.48" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:hint="Price"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/editDescription"
        app:layout_constraintStart_toEndOf="@id/editCalories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48" />

    <!-- Upload Gambar -->
    <LinearLayout
        android:id="@+id/photoLayout"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/editPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAddPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Add Photo"
            android:src="@drawable/ic_add_photo" />
    </LinearLayout>

    <!-- Lokasi -->
    <EditText
        android:id="@+id/editStoreLocation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:hint="Detail Store Location"
        android:background="@drawable/bg_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/photoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Upload -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#009FE3"
        android:text="Upload"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@id/editStoreLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
